<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_addr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffEAEAEA"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/id"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/main2_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#ffEAEAEA"
                android:ems="10"
                android:inputType="textVisiblePassword"
                android:paddingBottom="6dp"
                android:paddingTop="4dp" />

            <Button
                android:id="@+id/check_id"
                android:layout_width="32dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:paddingBottom="6dp"
                android:paddingTop="4dp"
                android:text="중복확인"
                android:textSize="13dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="닉네임"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/main2_nik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#ffEAEAEA"
                android:ems="10"
                android:inputType="text"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" />

            <Button
                android:id="@+id/check_nick"
                android:layout_width="32dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:paddingBottom="6dp"
                android:paddingTop="4dp"
                android:text="중복확인"
                android:textSize="13dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/TextView_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/pw"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/main2_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#ffEAEAEA"
                 android:inputType="textPassword"
                android:ems="10"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/main2_pw2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#ffEAEAEA"
                 android:inputType="textPassword"
                android:ems="10"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/res_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="이메일"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/main2_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#ffEAEAEA"
                android:ems="10"
                android:inputType="textVisiblePassword"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" >

                <requestFocus />
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_tel"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#ffEAEAEA"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
         android:layout_marginTop="15dp"
        android:text="회원 가입"
        android:textSize="13dp" />

</LinearLayout>