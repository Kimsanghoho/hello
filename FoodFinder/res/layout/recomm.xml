<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffEAEAEA"
    android:orientation="vertical"
    android:paddingBottom="25dp" >

    <FrameLayout
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:background="#ffEAEAEA"
        android:paddingBottom="170dp"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/foodname_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/foodView_1"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/recommed_1" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/recommed_2" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/recommed_3" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/Layout_re1"
        android:layout_width="310dp"
        android:layout_height="200dp"
        android:layout_below="@+id/aa"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/foodView1"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp" >

            <TextView
                android:id="@+id/foodname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="초밥"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/Layout_re1" >

        <LinearLayout
            android:id="@+id/Layout_re2"
            android:layout_width="135dp"
            android:layout_height="105dp"
            android:layout_margin="15dp"
             
            android:layout_marginTop="46dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/foodView2"
                android:layout_width="84dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/foodname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="삼겹살"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout_re3"
            android:layout_width="135dp"
            android:layout_height="105dp"
            android:layout_marginLeft="25dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/foodView3"
                android:layout_width="84dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/foodname3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="냉면"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/linearLayout1" >

        <LinearLayout
            android:id="@+id/Layout_re4"
            android:layout_width="135dp"
            android:layout_height="105dp"
            android:layout_margin="15dp"
            android:layout_marginTop="46dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/foodView4"
                android:layout_width="84dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/foodname4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="치킨님"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout_re5"
            android:layout_width="135dp"
            android:layout_height="105dp"
            android:layout_marginLeft="25dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/foodView5"
                android:layout_width="84dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/foodname5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="떡볶이"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>